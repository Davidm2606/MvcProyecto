@model List<Empleados>;

@{
    ViewData["Title"] = "Inicio Empleados";
    
}


<h1 class="display-4">LISTA DE EMPLEADOS</h1>

<button type="button" class="btn btn-dark mb-3" onclick="location.href='@Url.Action("Create", "Empleado")'">Crear</button>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Cedula</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Edad</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Cedula</td>
                <td>@producto.Nombre</td>
                <td>@producto.Apellido</td>
                <td>@producto.Edad</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Details" asp-route-Cedula="@producto.Cedula" class="btn btn-primary me-2"><i class="bi bi-eye-fill"></i></a>
                        <a asp-action="Edit" asp-route-Cedula="@producto.Cedula" class="btn btn-warning me-2"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-route-Cedula="@producto.Cedula" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
